<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#606c38"
    tools:context=".MainActivity">

    <!-- shows winner -->
    <TextView
        style="@style/TextStyle"
        android:id="@+id/winner"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:textColor="#fefae0"
        />

    <!-- button for each player -->
    <Button
        style = "@style/TextStyle"
        android:id="@+id/player1"
        android:backgroundTint="#283618"

        android:minWidth="180dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"

        android:onClick="player1"
        />

    <Button
        style = "@style/TextStyle"
        android:id="@+id/player2"
        android:backgroundTint="#283618"

        android:minWidth="180dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:layout_marginRight="10dp"

        android:onClick="player2"
        />

    <!-- score of current set -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/curr_set1"
        android:text="Set:"
        android:textSize="28sp"
        android:textColor="@color/black"

        android:layout_marginTop="3dp"
        android:layout_below="@id/player1"
        android:layout_marginLeft="75dp"
        />

    <TextView
        style = "@style/TextStyle"
        android:id="@+id/player1_curr_set_score"
        android:background="#bc6c25"

        android:minWidth="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@id/curr_set1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/curr_set2"
        android:text="Set:"
        android:textSize="28sp"
        android:textColor="@color/black"

        android:layout_marginTop="3dp"
        android:layout_below="@id/player1"
        android:layout_marginRight="78dp"
        android:layout_alignParentRight="true"
        />

    <TextView
        style = "@style/TextStyle"
        android:id="@+id/player2_curr_set_score"
        android:background="#bc6c25"

        android:minWidth="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_below="@id/curr_set2"
        android:layout_alignParentRight="true"
        />

    <!--     score of current game -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/curr_score1"
        android:text="Score:"
        android:textSize="28sp"
        android:textColor="@color/black"

        android:layout_marginTop="3dp"
        android:layout_below="@id/player1_curr_set_score"
        android:layout_marginLeft="60dp"
        />

    <TextView
        style = "@style/TextStyle"
        android:id="@+id/player1_curr_score"
        android:background="#bc6c25"

        android:minWidth="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@id/curr_score1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/curr_score2"
        android:text="Score:"
        android:textSize="28sp"
        android:textColor="@color/black"

        android:layout_marginTop="3dp"
        android:layout_below="@id/player1_curr_set_score"
        android:layout_marginRight="62dp"
        android:layout_alignParentRight="true"
        />

    <TextView
        style = "@style/TextStyle"
        android:id="@+id/player2_curr_score"
        android:background="#bc6c25"

        android:minWidth="150dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_below="@id/curr_score2"
        />

<!--    new game-->
    <Button
        style = "@style/TextStyle"
        android:id="@+id/newGame"
        android:backgroundTint="#283618"
        android:text="New Game"
        android:padding="30dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="570dp"

        android:onClick="playAgain"
        />


</RelativeLayout>